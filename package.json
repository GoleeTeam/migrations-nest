{
    "name": "@golee/migrations-nest",
    "version": "2.0.2",
    "description": "Simple database migration tools for mongodb and NestJS",
    "author": "Golee Team <dev@golee.it>",
    "license": "Apache-2.0",
    "main": "dist/index",
    "types": "dist/index",
    "keywords": [
        "nest",
        "mongodb",
        "mongo",
        "migrations"
    ],
    "scripts": {
        "test": "jest",
        "build": "rimraf dist && tsc --project tsconfig.build.json",
        "check": "cspell lint --quiet src",
        "prepare": "husky install",
        "prepublish": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GoleeTeam/migrations-nest.git"
    },
    "bugs": {
        "url": "https://github.com/GoleeTeam/migrations-nest/issues"
    },
    "homepage": "https://github.com/GoleeTeam/migrations-nest#readme",
    "peerDependencies": {
        "@nestjs/common": "^9.0.0 || ^10.0.0",
        "@nestjs/core": "^9.0.0 || ^10.0.0",
        "@nestjs/testing": "^9.0.0 || ^10.0.0",
        "mongodb": "^4.0.0 || ^5.0.0 || ^6.0.0"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.14",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/common": "^10.4.5",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.4.5",
        "@nestjs/testing": "^10.4.5",
        "@types/jest": "^27.5.2",
        "@types/node": "^17.0.45",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "cspell": "^8.15.4",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": "^14.0.1",
        "mongodb": "^4.17.2",
        "mongodb-memory-server": "^10.1.2",
        "prettier": "^3.3.3",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.5",
        "typescript": "^4.9.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.*spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.ts": "eslint --fix",
        "*.json": "prettier --write"
    }
}
