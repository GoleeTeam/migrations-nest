{
    "name": "@golee/migrations-nest",
    "version": "2.0.0",
    "description": "",
    "main": "dist/index",
    "types": "dist/index",
    "scripts": {
        "test": "jest",
        "build": "rimraf dist && tsc --project tsconfig.build.json",
        "check": "cspell lint --quiet src",
        "prepare": "husky install",
        "prepublish": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GoleeTeam/migrations-nest.git"
    },
    "author": "",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/GoleeTeam/migrations-nest/issues"
    },
    "homepage": "https://github.com/GoleeTeam/migrations-nest#readme",
    "peerDependencies": {
        "@nestjs/common": "^8.0.0 || ^10.0.0",
        "@nestjs/core": "^8.0.0 || ^10.0.0",
        "@nestjs/testing": "^8.0.0 || ^10.0.0"
    },
    "dependencies": {
        "mongodb": "^6.9.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.2"
    },
    "devDependencies": {
        "@nestjs/common": "^10.3.7",
        "@nestjs/config": "^3.2.1",
        "@nestjs/core": "^10.3.7",
        "@nestjs/testing": "^10.0.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "cspell": "^8.3.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.2",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lint-staged": "^14.0.1",
        "mongodb-memory-server": "^10.1.2",
        "prettier": "^3.1.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.*spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.ts": "eslint --fix",
        "*.json": "prettier --write"
    }
}
